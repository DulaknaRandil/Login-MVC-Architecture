@{
    ViewBag.Title = "Dashboard";
}

<div class="container mx-auto px-4 py-8">
    <div class="bg-white shadow-lg rounded-lg p-6">
        <h2 class="text-3xl font-bold text-gray-800 mb-4">Dashboard</h2>
        <h1 class="text-2xl font-semibold text-blue-500 mb-8">Welcome</h1>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            <div class="bg-blue-100 border border-blue-200 rounded-lg p-4">
                <h3 class="text-xl font-semibold text-blue-600 mb-2">Tasks</h3>
                <p class="text-gray-700">You have <span class="font-bold">5</span> tasks pending.</p>
            </div>
            <div class="bg-yellow-100 border border-yellow-200 rounded-lg p-4">
                <h3 class="text-xl font-semibold text-yellow-600 mb-2">Messages</h3>
                <p class="text-gray-700">You have <span class="font-bold">3</span> unread messages.</p>
            </div>
            <div class="bg-green-100 border border-green-200 rounded-lg p-4">
                <h3 class="text-xl font-semibold text-green-600 mb-2">Notifications</h3>
                <p class="text-gray-700">You have <span class="font-bold">2</span> new notifications.</p>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">